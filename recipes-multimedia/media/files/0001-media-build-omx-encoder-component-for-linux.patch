---
 Android.mk                                                | 2 +-
 mm-video-v4l2/vidc/common/Android.mk                      | 2 ++
 mm-video-v4l2/vidc/vdec/Android.mk                        | 3 ++-
 mm-video-v4l2/vidc/venc/src/omx_video_encoder.cpp         | 9 +++++++++
 mm-video-v4l2/vidc/venc/src/video_encoder_device_v4l2.cpp | 4 ++++
 5 files changed, 18 insertions(+), 2 deletions(-)

diff --git a/Android.mk b/Android.mk
index ace2fbb..a6d8dad 100644
--- a/Android.mk
+++ b/Android.mk
@@ -3,7 +3,7 @@ QCOM_MEDIA_ROOT := $(call my-dir)
 #Compile these for all targets under QCOM_BOARD_PLATFORMS list.
 ifeq ($(call is-board-platform-in-list, $(QCOM_BOARD_PLATFORMS)),true)
 include $(QCOM_MEDIA_ROOT)/mm-core/Android.mk
-include $(QCOM_MEDIA_ROOT)/libstagefrighthw/Android.mk
+-include $(QCOM_MEDIA_ROOT)/libstagefrighthw/Android.mk
 endif
 
 ifeq ($(call is-board-platform-in-list, $(MSM_VIDC_TARGET_LIST)),true)
diff --git a/mm-video-v4l2/vidc/common/Android.mk b/mm-video-v4l2/vidc/common/Android.mk
index e37746f..968ba79 100644
--- a/mm-video-v4l2/vidc/common/Android.mk
+++ b/mm-video-v4l2/vidc/common/Android.mk
@@ -36,7 +36,9 @@ LOCAL_PRELINK_MODULE      := false
 LOCAL_SHARED_LIBRARIES    := liblog libutils libcutils libdl
 
 LOCAL_SRC_FILES   := src/extra_data_handler.cpp
+ifeq ($(BOARD_USES_ADRENO), true)
 LOCAL_SRC_FILES   += src/vidc_color_converter.cpp
+endif
 
 LOCAL_ADDITIONAL_DEPENDENCIES += $(TARGET_OUT_INTERMEDIATES)/KERNEL_OBJ/usr
 
diff --git a/mm-video-v4l2/vidc/vdec/Android.mk b/mm-video-v4l2/vidc/vdec/Android.mk
index 669c42f..31d97de 100644
--- a/mm-video-v4l2/vidc/vdec/Android.mk
+++ b/mm-video-v4l2/vidc/vdec/Android.mk
@@ -1,3 +1,4 @@
+ifeq ($(VDEC_ENABLE), true)
 LOCAL_PATH := $(call my-dir)
 include $(CLEAR_VARS)
 
@@ -194,7 +195,7 @@ LOCAL_SRC_FILES               += src/omx_swvdec_utils.cpp
 include $(BUILD_SHARED_LIBRARY)
 endif
 endif
-
+endif
 
 # ---------------------------------------------------------------------------------
 #                END
diff --git a/mm-video-v4l2/vidc/venc/src/omx_video_encoder.cpp b/mm-video-v4l2/vidc/venc/src/omx_video_encoder.cpp
index 7573706..4101cca 100644
--- a/mm-video-v4l2/vidc/venc/src/omx_video_encoder.cpp
+++ b/mm-video-v4l2/vidc/venc/src/omx_video_encoder.cpp
@@ -102,6 +102,10 @@ void omx_venc::perf_control::send_hint_to_mpctl(bool state)
 
 bool omx_venc::perf_control::load_lib()
 {
+#ifdef VENC_PERF_NO_SUPPORT
+    m_perf_lib = NULL;
+    return true;
+#else
     char perf_lib_path[PROPERTY_VALUE_MAX] = {0};
     if (m_perf_lib)
         return true;
@@ -132,6 +136,7 @@ handle_err:
         dlclose(m_perf_lib);
     }
     return false;
+#endif
 }
 
 //constructor
@@ -164,13 +169,17 @@ omx_venc::omx_venc()
     property_get("vidc.debug.lowlatency", property_value, "0");
     lowlatency = atoi(property_value);
     property_value[0] = '\0';
+#ifndef VENC_PERF_NO_SUPPORT
     m_perf_control.send_hint_to_mpctl(true);
+#endif
 }
 
 omx_venc::~omx_venc()
 {
     get_syntaxhdr_enable = false;
+#ifndef VENC_PERF_NO_SUPPORT
     m_perf_control.send_hint_to_mpctl(false);
+#endif
     //nothing to do
 }
 
diff --git a/mm-video-v4l2/vidc/venc/src/video_encoder_device_v4l2.cpp b/mm-video-v4l2/vidc/venc/src/video_encoder_device_v4l2.cpp
index 4ec2322..c5d083a 100644
--- a/mm-video-v4l2/vidc/venc/src/video_encoder_device_v4l2.cpp
+++ b/mm-video-v4l2/vidc/venc/src/video_encoder_device_v4l2.cpp
@@ -51,8 +51,12 @@ ADVISED OF THE POSSIBILITY OF SUCH DAMAGE.
 #define ALIGN(x, to_align) ((((unsigned long) x) + (to_align - 1)) & ~(to_align - 1))
 #define EXTRADATA_IDX(__num_planes) ((__num_planes) ? (__num_planes) - 1 : 0)
 #define MAXDPB 16
+#ifndef MIN
 #define MIN(x,y) (((x) < (y)) ? (x) : (y))
+#endif
+#ifndef MAX
 #define MAX(x,y) (((x) > (y)) ? (x) : (y))
+#endif
 #define ROUND(__sz, __align) (((__sz) + ((__align>>1))) & (~(__align-1)))
 #define MAX_PROFILE_PARAMS 6
 #define MPEG4_SP_START 0
