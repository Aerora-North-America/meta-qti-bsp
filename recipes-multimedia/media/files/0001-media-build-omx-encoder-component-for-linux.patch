     if (m_perf_lib)
         return true;
@@ -123,6 +127,7 @@ handle_err:
         dlclose(m_perf_lib);
     }
     return false;
+#endif
 }
 
 //constructor
@@ -155,13 +160,17 @@ omx_venc::omx_venc()
     property_get("vidc.debug.lowlatency", property_value, "0");
     lowlatency = atoi(property_value);
